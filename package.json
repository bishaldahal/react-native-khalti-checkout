{
  "name": "@bishaldahal/react-native-khalti-checkout",
  "version": "0.1.0",
  "description": "React Native/Expo SDK for Khalti Payment Gateway. Accept payments from Khalti, eBanking, mobile banking, and cards in Nepal.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "expo-module build",
    "clean": "expo-module clean",
    "lint": "expo-module lint",
    "test": "expo-module test",
    "prepare": "expo-module prepare",
    "prepublishOnly": "expo-module prepublishOnly",
    "expo-module": "expo-module",
    "open:ios": "xed example/ios",
    "open:android": "open -a \"Android Studio\" example/android",
    "setup": "chmod +x scripts/setup.sh && scripts/setup.sh",
    "release": "standard-version",
    "release:patch": "npm run build && standard-version --release-as patch",
    "release:minor": "npm run build && standard-version --release-as minor",
    "release:major": "npm run build && standard-version --release-as major",
    "release:prerelease": "npm run build && standard-version --prerelease",
    "release:alpha": "npm run build && standard-version --prerelease alpha",
    "release:beta": "npm run build && standard-version --prerelease beta",
    "release:dry": "standard-version --dry-run",
    "release:first": "standard-version --first-release",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "commit": "git-cz"
  },
  "keywords": [
    "react-native",
    "expo",
    "khalti",
    "payment",
    "payment-gateway",
    "nepal",
    "mobile-payment",
    "ebanking",
    "khalti-payment",
    "khalti-checkout",
    "android",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bishaldahal/react-native-khalti-checkout.git"
  },
  "bugs": {
    "url": "https://github.com/bishaldahal/react-native-khalti-checkout/issues"
  },
  "author": {
    "name": "Bishal Dahal",
    "email": "bishaldahal@duck.com",
    "url": "https://github.com/bishaldahal"
  },
  "license": "MIT",
  "homepage": "https://github.com/bishaldahal/react-native-khalti-checkout#readme",
  "files": [
    "build",
    "android/src",
    "android/build.gradle",
    "ios",
    "src",
    "expo-module.config.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "THIRD_PARTY_NOTICES.md"
  ],
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "expo-modules-core": "^2.4.2"
  },
  "devDependencies": {
    "@types/react": "~19.0.0",
    "expo": "~53.0.0",
    "expo-module-scripts": "^4.1.6",
    "react-native": "0.79.1",
    "conventional-changelog-cli": "^5.0.0",
    "standard-version": "^9.5.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "peerDependencies": {
    "expo": "*",
    "react": "*",
    "react-native": "*"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard-version": {
    "scripts": {
      "prebump": "npm run test && npm run build",
      "posttag": "git push --follow-tags origin main && npm publish"
    },
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "section": "Code Refactoring"
      },
      {
        "type": "perf",
        "section": "Performance Improvements"
      },
      {
        "type": "test",
        "hidden": true
      }
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run lint",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nativeDependencies": {
    "khalti-android-sdk": "com.khalti:checkout-sdk-android:<latest-version>"
  }
}
